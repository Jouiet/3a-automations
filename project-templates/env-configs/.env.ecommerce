# ═══════════════════════════════════════════════════════════════════════════
# E-COMMERCE PROJECT - ENVIRONMENT CONFIGURATION
# ═══════════════════════════════════════════════════════════════════════════
# Generic config for Shopify/WooCommerce stores
# ═══════════════════════════════════════════════════════════════════════════

# ─────────────────────────────────────────────────────────────────────────────
# BRAND SETTINGS
# ─────────────────────────────────────────────────────────────────────────────
BRAND_NAME=MyStore
BRAND_URL=https://mystore.com
BRAND_EMAIL=contact@mystore.com
BOOKING_URL=https://mystore.com/contact
SENDER_NAME=Support

# ─────────────────────────────────────────────────────────────────────────────
# LOCALE (French default)
# ─────────────────────────────────────────────────────────────────────────────
TIMEZONE=Europe/Paris
LOCALE=fr-FR
PHONE_PREFIX=33
DEFAULT_LANGUAGE=fr

# ─────────────────────────────────────────────────────────────────────────────
# n8n SETTINGS
# ─────────────────────────────────────────────────────────────────────────────
N8N_HOST=https://n8n.mystore.com
N8N_API_KEY=

# ─────────────────────────────────────────────────────────────────────────────
# GOOGLE APIs
# ─────────────────────────────────────────────────────────────────────────────
GOOGLE_API_KEY=
GOOGLE_SHEET_ID=
SHEET_NAME=Leads

# ─────────────────────────────────────────────────────────────────────────────
# SHOPIFY (if applicable)
# ─────────────────────────────────────────────────────────────────────────────
SHOPIFY_STORE_URL=mystore.myshopify.com
SHOPIFY_ACCESS_TOKEN=
SHOPIFY_API_VERSION=2024-01

# ─────────────────────────────────────────────────────────────────────────────
# EMAIL / MARKETING
# ─────────────────────────────────────────────────────────────────────────────
KLAVIYO_API_KEY=pk_
KLAVIYO_METRIC=lead_captured
KLAVIYO_LIST_ID=

# ─────────────────────────────────────────────────────────────────────────────
# WHATSAPP
# ─────────────────────────────────────────────────────────────────────────────
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_ACCESS_TOKEN=
TEMPLATE_LANGUAGE=fr
TEMPLATE_CONFIRMATION=commande_confirmation
TEMPLATE_REMINDER_24H=livraison_rappel

# ─────────────────────────────────────────────────────────────────────────────
# LEAD GENERATION
# ─────────────────────────────────────────────────────────────────────────────
APIFY_API_TOKEN=
LINKEDIN_SEARCH_URL=https://www.linkedin.com/search/results/people/?keywords=e-commerce%20manager
MAX_PROFILES=100
MIN_LEAD_SCORE=50
LEAD_SOURCE=ecommerce_linkedin

# Lead scoring for e-commerce
TITLE_KEYWORDS=e-commerce,ecommerce,shopify,woocommerce,magento,retail,digital
TARGET_INDUSTRIES=retail,fashion,beauty,consumer,food
TARGET_LOCATIONS=france,belgium,switzerland,morocco

# ─────────────────────────────────────────────────────────────────────────────
# ASPECT RATIOS (Product focus)
# ─────────────────────────────────────────────────────────────────────────────
IMAGE_ASPECT_RATIO=1:1
VIDEO_ASPECT_RATIO=16:9

# ─────────────────────────────────────────────────────────────────────────────
# WEBHOOK PATHS
# ─────────────────────────────────────────────────────────────────────────────
WEBHOOK_PATH_LEADS=store/leads
WEBHOOK_PATH_WHATSAPP=store/whatsapp
